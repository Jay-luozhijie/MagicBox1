<div class='collapse' id="shareProduct">
    <div class="createAnswerArea mb-4">
            <%if(currentUser){%>
                <form action="/<%=idea._id%>/answer" id='submitAnswerForm' class="validated-form my-3" method="POST" enctype="multipart/form-data" novalidate>           
                    <label class="form-label ms-2" for="answerContent">Share your product:</label>
                    <textarea class='textEditorArea' id = 'submitAnswerContent' name="answerContent" placeholder="description:"></textarea>
                    <div id='noAnswerContentErrorMessage' class='noContentWarning'>

                    </div>
                    <div class="mb-3 mt-3">
                        <label for="formFileMultiple" class="form-label ms-2">upload images:</label>
                        <input class="form-control" type="file" id="answerImage" name='answerImage' multiple>
                    </div>
                
                    <div>
                        <button type="submit" class="btn" id='answerSubmit'>Save</button>    
                    </div>
                </form>
            <%}%>
        <br>
    </div>
</div>
<script src='/js/answer/submitAnswer.js'></script>

